<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Astropedia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="shapeButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="cornerSize">10%</item>
    </style>

    <style name="shapeButton1" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="cornerSize">8%</item>
    </style>

    <style name="TextAppearance44">
        <item name="android:textColor">@color/white_tx</item>
        <item name="android:fontFamily">@font/poppinsmed</item>
    </style>

    <style name="shapeIcon" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">10%</item>
    </style>

    <style name="tabLayoutText" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/poppinssemi</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white_tl</item>
    </style>

    <style name="tabLayoutText2" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="fontFamily">@font/poppinssemi</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white_tl</item>
    </style>

</resources>